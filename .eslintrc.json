{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "ignorePatterns": [
        "*.d.ts",
        "*.js"
    ],
    "rules": {
        "comma-dangle": "off",
        "eol-last": "warn",
        "indent": "off",
        "max-len": [
            "error",
            {
                "code": 125
            }
        ],
        "multiline-ternary": "off",
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "operator-linebreak": "off",
        "space-before-function-paren": "off",
        "new-cap": "off",
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "ecmaVersion": "latest",
                "sourceType": "module"
            },
            "plugins": [
                "@typescript-eslint"
            ]
        }
    ]
}